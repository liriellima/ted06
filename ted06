# include "stdio.h"
# include "string.h"
# include "dos.h"
int n,i;
struct cliente {
       char nome[20];
       char conta[6];
       char agencia[6];
       char senha[6];
       float saldo;
       }usuario[20];

/***************/
cadastrar (){
   int i=1;
    printf ("\n\t\t CADASTRO DE CLIENTES  \n");
     printf ("\ndeseja cadastrar quantos clientes? ");
     scanf ("%d", &n);

  for (i=1;i<=n;i++)
    {
    puts ("");
    printf ("\n  NOME: ");
    scanf ("%s", &usuario[i].nome);
    printf ("\n AGENCIA: ");
    scanf ("%s", &usuario[i].agencia);
    printf ("\n NUMERO DA CONTA: ");
    scanf ("%s", &usuario[i].conta);
    printf ("\n SENHA: ");
    scanf ("%s", &usuario[i].senha);
    usuario[i].saldo = 0;
    }  //for
    printf ("\n\n* operacao realizada com sucesso !!!*");
    sleep (5) ;
 }
/******/
deposito (){
    int a,b,c,x;
    float dep;
    char agn[6], conta[6], senha[6];

    printf ("\n\t\t DEPOSITO \n");

    printf ("\n DIGITE A SUA AGENCIA: ");
    scanf ("%s", &agn);
    printf ("\n NUMERO DA CONTA: ");
    scanf ("%s", &conta);

    for (i=1;i<=n;i++)
    {
        a = strcmp(agn,usuario[i].agencia);
        b = strcmp(conta,usuario[i].conta);
        if  ( (a == 0) && (b == 0) )
        {
          x=1;
          printf ("\n CLIENTE : %s", usuario[i].nome);
          printf ("\n\n QUANTIDADE DO DEPOSITO: ");
          scanf ("%f", &dep) ;
          if (dep >= 0)
          {
            usuario[i].saldo = usuario[i].saldo + dep;
          }//if2
          else
          {
          printf ("\n\a -- erro: O DEPOSITO TEM QUE SER POSITIVO -- ");
          break;
          }//else
        }//if1

     }  //for
     if(x!=1)
     printf ("\n\a\a -- erro: DADOS INCORRETOS ! --");
     printf ("\n\n  aguarde....");
     sleep (5) ;

} //fecha deposito
/******************/
saldo (){
     char agn[6], conta[6], senha[6];
     int a,b,c,x;
     printf ("\n\t\t SALDO \n");

    printf ("\n*--DIGITE A SUA AGENCIA--* ");
    scanf ("%s", &agn);
    printf ("\n*--NUMERO DA CONTA--* ");
    scanf ("%s", &conta);
    printf ("\n --DIGITE A SUA SENHA-- ");
    scanf ("%s", &senha);
    for (i=1;i<=n;i++)
    {

        a = strcmp(agn,usuario[i].agencia);
        b = strcmp(conta,usuario[i].conta);
        c = strcmp(senha,usuario[i].senha);
        if  ( (a == 0) && (b == 0)  && (c == 0) )
        {
          x=1;
          printf ("\n CLIENTE : %s", usuario[i].nome) ;
          printf ("\n\n *SEU SALDO E : %f reais *", usuario[i].saldo) ;
        }//if
       }//for
    if (x != 1)
    {
    printf ("\n\a\a * erro: DADOS INCORRETOS ! *");
    }
    printf ("\n\n* aguarde... *");
    sleep (5) ;
}// fecha consultaSaldo

saque (){
    int a,b,c,x;
    float saq;
    char agn[6], conta[6], senha[6];

    printf ("\n\t\t SAQUE \n");

    printf ("\n* DIGITE A SUA AGENCIA * ");
    scanf ("%s", &agn);
    printf ("\n* NUMERO DA CONTA * ");
    scanf ("%s", &conta);

    for (i=1;i<=n;i++)
    {
        a = strcmp(agn,usuario[i].agencia);
        b = strcmp(conta,usuario[i].conta);
        if  ( (a == 0) && (b == 0) )
        {
          printf ("\n CLIENTE : %s", usuario[i].nome) ;
          printf ("\n\n* VALOR DA RETIRADA *");
          scanf ("%f", &saq) ;
          if ((saq > 0) && (saq <= usuario[i].saldo) )
          {
            x=1;
            usuario[i].saldo = usuario[i].saldo - saq;
          }//if2
        }//if1
     }  //for
     if (x != 1){
           printf ("\n\a\a  erro: SALDO INSUFICIENTE ! ");
           }
      printf ("\n\n  aguarde... ");
      sleep (5) ;
}//fecha saque

menu (){
printf ("Selecione a opcao desejada...\n");
printf (" Se ainda nÃ£o tem uma conta, se cadastre!! \n");
puts ("");
puts ("1 - CADASTRO") ;
puts ("2 - DEPOSITO") ;
puts ("3 - CONSULTA SALDO") ;
puts ("4 - RETIRADA");
puts ("5 - Sair");
     }
main()
{
int op;

menu ();
scanf ("%d", &op);
 switch (op)
 {
    case 1:
    system ("cls") ;
    cadastrar ();
    system ("cls");
    main();
    case 2:
    system ("cls") ;
    deposito ();
    system ("cls");
    main();
    case 3:
    system ("cls") ;
    saldo ();
    system ("cls");
    main();
    case 4:
    system ("cls") ;
    saque ();
    system ("cls");
    main();
    case 5:
    system ("cls") ;
    exit (1);

 }
getch();
}
